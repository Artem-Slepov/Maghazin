        <Button Content="Отчёт" Name="BTNOtchet" Click="BTNOtchet_Click" FontSize="16" Margin="376,80,347,0" HorizontalAlignment="Center" Width="67" Foreground="#FF19D16C" Background="Black"/>

        
            
        <Frame NavigationUIVisibility="Hidden" Grid.Column="0" Grid.Row="1" Name="MoyaRamka"/>
    </Grid>
</Window>
